<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GerenciadorCursos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GerenciadorCursos"
    Shell.FlyoutBehavior="Disabled"
    Title="Gerenciador de Cursos Online"
    >

    <TabBar>
        <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
        <ShellContent
        Title="Matricular Aluno"
        ContentTemplate="{DataTemplate local:Matricula}"
        Route="Matricula" />
        
    </TabBar>

</Shell>
